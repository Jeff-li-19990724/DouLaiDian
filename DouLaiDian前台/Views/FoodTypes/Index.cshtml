@model IEnumerable<QT.FoodType>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
<script type="text/javascript" src="../style/js/jquery.js"></script>
<script type="text/javascript" src="../style/js/page_common.js"></script>
<link href="../style/css/common_style_blue.css" rel="stylesheet" type="text/css">
<link rel="stylesheet" type="text/css" href="../style/css/index_1.css" />
<h2></h2>
<div id="TitleArea">
    <div id="TitleArea_Head"></div>
    <div id="TitleArea_Title">
        <div id="TitleArea_Title_Content">
            <img border="0" width="13" height="13"
                 src="style/images/title_arrow.gif" /> 菜系列表
        </div>
    </div>
    <div id="TitleArea_End"></div>
</div>
<!-- 过滤条件 -->
<div id="QueryArea">
    <form action="/FoodTypes/Index" method="post">
        <input type="text" name="FoodTypeName" title="请输入菜系名称">
        <input type="submit" value="搜索">
    </form>
</div>
<p>

</p>
<div id="MainArea">
    <table class="MainArea_Content" align="center" cellspacing="0" cellpadding="0">
        <!-- 表头-->
        <thead>
            <tr align="center" valign="middle" id="TableTitle">
                <td>菜系名称</td>
                <td>详    情</td>
                <td></td>
            </tr>
        </thead>
        <tbody id="TableData">
            @foreach (var item in Model)
            {
                <tr class="TableDetail1">
                    <td align="center">
                        @Html.DisplayFor(modelItem => item.FoodTypeName)
                    </td>
                    <td align="center">
                        @Html.DisplayFor(modelItem => item.describe)
                    </td>
                    <td align="center">
                        @Html.ActionLink("删除", "Delete", new { id = item.FoodTypeID }, new { @class = "FunctionButton" , onclick = "return confirm('确认删除？')" })
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <div id="TableTail" align="center">
        <div class="FunctionButton">
            @*<a href="/FoodTypes/Create">添加</a>*@
            <a href=@Url.Action("Create")>添加</a>
        </div>
    </div>
</div>
